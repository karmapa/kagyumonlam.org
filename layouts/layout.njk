                        <div class="title_and_subtitle">
                            <h1 class="title">Kagyu Monlam Chenmo</h1>
                            <p class="headsubtitle">Official Website</p>
                        </div>
                    </a>
                    <div class="col-xs-6 heading-info">
                        <p>The 34th Kagyu Monlam<br />
                        February 13&ndash;19, 2017<br />
                        Bodhgaya, India</p>
                    </div>
                </div>
            </div>
        </div><!--/.navbar -->
        <div id="main" class="container-fluid">
            {% block main %}
                {{contents | safe}}
            {% endblock %}
        </div>

        <div class="row-offcanvas row-offcanvas-left">
          <div id="sidebar" class="sidebar-offcanvas">
              <div class="col-md-12">
                <h3>Navigation</h3>
                <ul class="nav">
                    {% for n in navigation %}

                        <li class="{% if n.url == path %}active{% endif %} {% if n.children %}parent{% endif %}">
                            <a href="{{n.url}}">{{n.title}}</a>
                            {% if n.url == path %}
                                <span class="sr-only">(current)</span>
                            {% endif %}
                        </li>

                        {% if n.children %}
                            {% for child in n.children %}
                                <li class="child{% if child.url == path %} active{% endif %}">
                                    <a href="{{child.url}}">{{child.title}}</a>
                                    {% if child.url == path %}
                                        <span class="sr-only">(current)</span>
                                    {% endif %}
                                </li>
                            {% endfor %}
                        {% endif %}

                    {% endfor %}
                </ul>
              </div>
          </div>
        </div><!--/row-offcanvas -->
    </body>
</html>
